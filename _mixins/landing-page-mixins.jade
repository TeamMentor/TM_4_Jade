mixin usp-div
    #usp
        .lge-container
            .row
                .col-offset-2.col-8
                    include:marked ../../TM_Static/content/landing-pages/usp.md
                    .row
                        .col-offset-3.col-6
                            a(href='/guest/sign-up.html')
                                +start-trial-button

mixin reasons-div
    #reasons
            .row
                .col-offset-2.col-8
                    .lge-container
                        br
                        include:marked ../../TM_Static/content/landing-pages/reasons-div-heading.md
                        table
                            tr
                                td
                                    img(src='/assets/icons/ie/fix-vulnerabilities.jpg')
                                td
                                    include:marked ../../TM_Static/content/landing-pages/selling-point-1.md
                            tr
                                td
                                    img(src='/assets/icons/ie/reduce-vulnerabilities.jpg')
                                td
                                    include:marked ../../TM_Static/content/landing-pages/selling-point-2.md
                            tr
                                td
                                    img(src='/assets/icons/ie/expand-knowledge.jpg')
                                td
                                    include:marked ../../TM_Static/content/landing-pages/selling-point-3.md

