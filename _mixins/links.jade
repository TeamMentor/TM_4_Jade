			a#nav-login(href='/jade/guest/login.html') Login

mixin links-navbar__home
	ul
		li
			a#nav-user-main(href='/jade/user/main.html')
				span.icon
					+search-icon
				span.text Search
		li
			a#nav-user-guidance(href='/jade/show/')
				+index-icon
				span Index
		li
			a#nav-user-help(href='/jade/help/index.html')
				+info-icon
				span Docs
		li
			a#nav-user-logout(href='/jade/user/logout')
				+logout-icon
				span Logout

