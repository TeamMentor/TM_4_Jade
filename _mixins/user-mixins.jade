include ../shared-mixins/globals.jade

mixin team-mentor-summary
  #summary.bg.content
    include:marked ../../TM_Static/content/getting-started/login-wall-summary.md
    table
      tr
        td
          img(src='/assets/icons/ie/fix-vulnerabilities.png')
        td
          include:marked ../../TM_Static/content/getting-started/summary-point-1.md
      tr
        td
          img(src='/assets/icons/ie/reduce-vulnerabilities.png')
        td
          include:marked ../../TM_Static/content/getting-started/summary-point-2.md
      tr
        td
          img(src='/assets/icons/ie/expand-knowledge.png')
        td
          include:marked ../../TM_Static/content/getting-started/summary-point-3.md

mixin login-form
  form#login-form(role='form' method='post' action='/jade/user/login')
    h4 Login
    .form-group
      +username-input
    .form-group
      +password-input
    .form-group
      .row
        .col-5
          +login-button
        .col-7
          a#link-forgot-pwd.minor(href='/jade/guest/pwd-forgot.html') Forgot your password?

//- sign-up-form
mixin sign-up-form
  form#sign-up-form(role='form', method='POST', action='/jade/user/sign-up')
    h4 Sign Up
    .row
      .lge-container
        .form-group
          +username-input
          include:marked ../../TM_Static/content/getting-started/username-prompt.md
    .row
      .col-6
        .lge-container
          .form-group
            +password-input
      .col-6
        .lge-container
          .form-group
            +confirm-password-input
      .lge-container
        include:marked ../../TM_Static/content/getting-started/password-prompt.md
    .row
      .lge-container
        .form-group
          +email-input
          include:marked ../../TM_Static/content/getting-started/email-prompt.md
    .row
      .col-6
        .lge-container
          .form-group
            +first-name-input
      .col-6
        .lge-container
          .form-group
            +last-name-input
    .row
      .col-6
        .lge-container
          .form-group
            +company-input
      .col-6
        .lge-container
          .form-group
            +title-input
    .row
      .col-6
        .lge-container
          .form-group
            +country-input
      .col-6
        .lge-container
          .form-group
            +state-input

    include:marked ../../TM_Static/content/getting-started/agree-to-toc.md
    .row
      .col-5
        +sign-up-button


//- forgot-password-form
mixin forgot-password-form
  form#forgot-password(role='form', action='/jade/user/pwd_reset' method='post')
    h4 Retrieve your password
    .form-group
      +email-input
    .row
      .col-7
        +get-password-button

mixin pwd-reset-form
  form#pwd-reset-form(role='form' method='post')
    h4 Reset your password
    .form-group
      +password-input
      include:marked ../../TM_Static/content/getting-started/password-prompt.md
    .form-group
      +confirm-password-input
    .row
      .col-5
        +reset-password-button