include ../_mixins/links.jade
.fixed
    //If customizations are enabled
    if (global.custom && global.custom.custom_navigation)
        //Hides tm logo and shows navbar
        if(global.custom.custom_navigation.NoTm)
            #team-mentor-navigation(class=global.custom.custom_navigation.navbarclass)
                a(href='/user/main.html')
                    #tm-logo(class=global.custom.custom_navigation.logoclass)
                        img(src=global.custom.custom_navigation.logo)

                p(style=global.custom.custom_navigation.loggedInTextStyle)
                    span #{global.custom.custom_navigation.loggedInText}
                #links
                    +links-navbar__home
                    ul#message
                        li
                            +mail-icon
                            span Found an issue? Send us
                                =  ' '
                                a#tm-support-email(href=supportEmail) an email
                                =  '.'

        else
            #team-mentor-navigation
                a(href='/user/main.html')
                    #tm-logo(class="customization")
                #customer-logo
                    img(src=global.custom.custom_navigation.logo)
                #links
                    +links-navbar__home
                    ul#message
                        li
                            +mail-icon
                            span Found an issue? Send us
                                =  ' '
                                a#tm-support-email(href=supportEmail) an email
                                =  '.'
    else
        #team-mentor-navigation
            a(href='/user/main.html')
                #tm-logo
            #links
                +links-navbar__home
                ul#message
                    li
                        +mail-icon
                        if internalUser
                            span Found an issue? Open it
                                =  ' '
                                a#tm-support-email(href=githubUrl) here
                                =  '.'
                        else
                            span Found an issue? Send us
                                =  ' '
                                a#tm-support-email(href=supportEmail) an email
                                =  '.'